
@{
    ViewData["Title"] = "Index";
}

<style>
    section {
        width: 100%;
        height:100%;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        margin-top:5%;
    }
    form {
        background-color: #3e3d3d;
        padding: 30px;
        border-radius: 10px;
        color: #fff;
        -webkit-box-shadow: 0px 2px 104px -46px rgba(0,0,0,0.75);
        -moz-box-shadow: 0px 2px 104px -46px rgba(0,0,0,0.75);
        box-shadow: 0px 2px 104px -46px rgba(0,0,0,0.75);
        margin-top: -160px;
    }
    .form-control {
        display: block;
        width: 100%;
        height: calc(1.5em + .75rem + 2px);
        padding: .375rem .75rem;
        font-size: 1rem;
        font-weight: 400;
        line-height: 1.5;
        color: #495057;
        background-color: transparent;
        background-clip: padding-box;
        color: #f5821f;
        border: 1px solid #525252;
        border-radius: .25rem;
        transition: border-color .15s ease-in-out,box-shadow .15s ease-in-out;
    }
    label {
        color: #bdbdbd;
    }
    .btn {
        background-color: #f5841f;
        color:#fff;
        width:100%;
    }
    body > div > main > section > div:nth-child(1) > div > div > img {
        width: 100%;
        box-shadow: 0px 2px 104px -46px rgba(0,0,0,0.75);
        border-radius: 10px;
    }
    .retornar{
        text-align:center;
        margin-top:24px;
    }
    .retornar a {
         cursor: pointer;
     }

</style>
<section>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <img src="~/images/pizza-home.jpg"/>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-12">
                <form>
                    <div class="form-group">
                        <label for="Nome">Nome</label>
                        <input type="text" class="form-control" id="Nome"  placeholder="Nome">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email</label>
                        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Senha</label>
                        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Senha">
                    </div>
                    <button type="submit" class="btn">Enviar</button>
                    <div class="retornar">
                        <a>Retornar para a tela de login</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
